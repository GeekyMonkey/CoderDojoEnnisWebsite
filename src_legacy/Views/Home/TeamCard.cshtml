@model CoderDojo.Team
@{
    ViewBag.Title = "Team Card Printout";
    ViewBag.HideMenuButton = true;
    this.Layout = null;
    Team team = Model;
}



<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Team Card</title>

  <link rel="stylesheet" href="/content/Paper.css">

  <style>
      @@page { size: A6 landscape }

      * {
          box-sizing: border-box;
          border: 0;
          margin: 0;
          padding: 0;
      }
      html {
          font: 16px/1 'Open Sans', sans-serif;
      }

      img {
        /* Avoid grey border around transparent images */
        image-rendering: -moz-crisp-edges;         /* Firefox */
        image-rendering:   -o-crisp-edges;         /* Opera */
        image-rendering: -webkit-optimize-contrast;/* Webkit (non-standard naming) */
        image-rendering: crisp-edges;
        -ms-interpolation-mode: nearest-neighbor;  /* IE (non-standard property) */
      }

      table {
          width: 100%;
      }

      tr {
          width: 100%;
      }

      .HeadStripe {
          width: 100%;
          height: 10mm;
          border: solid 1px black;
      }

      .TeamAvatar {
          float: left;
          max-width: 25mm;
          max-height: 25mm;
          width: auto;
          height: auto;
          border: none;
      }

          .TeamAvatar.MissingImage {
              display: none;
          }

      .TeamTitle {
          font-size: 36px;
          font-weight: bold;
          text-align: center;
      }
          .TeamTitle table {
              padding-top: 2mm;
              padding-bottom: 2mm;
          }

      .TeamMembers {
          color: #2C3539;
          font-size: 20px;
          font-weight: bold;
          text-align: left;
          vertical-align: bottom;
      }
      .TeamMember {
          padding: 2mm;
          width: 50%;
          float: left;
      }

      .MemberAvatar {
          display: inline-block;
          vertical-align: middle;
          width: 9mm;
          height: 9mm;
          margin-right: 3mm;
      }

          .MemberAvatar img {
              max-width: 100%;
              max-height: 100%;
              text-align: center;
              border: 0;
          }

          .MemberAvatar.MissingImage {
              visibility: hidden;
          }

      .MemberName {
          font-size: 5mm;
          vertical-align: middle;
          display: inline-block;
          max-width: 45mm;
      }

  </style>


    <script src="//code.jquery.com/jquery-1.8.2.min.js"></script>
</head>

<body class="A6 landscape">
                                                    
  <section class="sheet padding-5mm">

    @* Team Color *@
    <div class="HeadStripe">
        <svg width="100%" height="100%">
            <rect x="0" y="0" width="100%" height="100%" fill="@team.HexCode" />
        </svg>
    </div>
   
   @* Team avatar and name *@ 
   <div class="TeamTitle">
      <table>
        <tr>
          <td><img class="TeamAvatar" src="@team.ImageUrl" onerror="$(this).addClass('MissingImage')"></td>
          <td>@team.TeamName</td>
        </tr>
      </table>      
    </div>

      @* Members *@
    <div class="TeamMembers">
        @foreach (var member in team.Members)
        {
        <div class="TeamMember">
            <span class="MemberAvatar"><img src="@member.ImageUrl" onerror="if (this.src != '/Images/User.png') this.src = '/Images/User.png';"/></span>
            <span class="MemberName">@member.FirstName @member.LastName</span>
        </div>
        }   
    </div>

  </section>

</body>

</html>
