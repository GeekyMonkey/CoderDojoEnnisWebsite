@model List<CoderDojo.BadgeCategory>
@{
    List<CoderDojo.BadgeCategory> badgeCategories = Model;
    ViewBag.MenuActive = "BadgeCategories";
    ViewBag.Title = "Badge Categories";
}

@section HeaderLeft
{
}

@section HeaderRight
{
}

@section Footer
{
    <a href="BadgeCategoryAdd" data-role="button" data-icon="plus">New Category</a>
}

@section Panels
{
    @Html.Partial("_MentorMenu")
}

<div class="content-primary">
    <ul data-role="listview" data-autodividers="false" id="myFilter" data-filter="false" data-filter-placeholder="Search..." data-filter-theme="a">
        @foreach (BadgeCategory b in badgeCategories)
        {
            <li>
                <a href="BadgeCategory/@(b.Id.ToString("N"))">
                    <img data-src="@b.ImageUrl" />
                    <span>@b.CategoryName</span>
                </a>
            </li>
        }
    </ul>
</div>
