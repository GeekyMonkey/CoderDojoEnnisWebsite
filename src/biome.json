{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"files": {
		"includes": [
			"app/**",
			"server/**",
			"shared/**",
			"types/**",
			"nuxt.config.ts",
			"package.json",
			"*.json",
			"drizzle.config.ts",
			"tailwind.config.ts",
			"!app/assets",
			"!app/assets/css",
			"!app/assets/images",
			"!types/supabase.ts",
			"!**/*.d.ts"
		]
	},
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all"
		}
	},
	"html": {
		"formatter": {
			"enabled": true,
			"indentScriptAndStyle": true
		},
		"experimentalFullSupportEnabled": true,
		"parser": {
			"interpolation": true
		}
	},
	"linter": {
		"rules": {
			"complexity": {
				"noUselessSwitchCase": "off"
			},
			"style": {
				"useBlockStatements": "error"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
